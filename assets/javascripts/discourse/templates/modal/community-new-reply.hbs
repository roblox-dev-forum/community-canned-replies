{{#d-modal-body title="community_canned_replies.add.modal_title" class="community-canned-replies-modal"}}
  {{community-canned-replies-form title=newTitle content=newContent}}
{{/d-modal-body}}

<div class="modal-footer community-canned-replies-footer">
  {{d-button
    class="btn-primary new-reply-save-btn"
    action=(action "save")
    label="save"
    disabled=disableSaveButton
  }}

  <a {{action "cancel"}}>{{i18n 'cancel'}}</a>
</div>
