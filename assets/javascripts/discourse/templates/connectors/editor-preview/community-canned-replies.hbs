{{#if isVisible}}
  <div class="d-editor-preview">
    {{#conditional-loading-spinner condition=loadingReplies}}
      {{#if canEdit}}
        {{d-button class="community-canned-replies-new"
            action=(action "newReply")
            icon="plus"
            label="community_canned_replies.insert.new_button"}}
        {{text-field class="community-canned-replies-filter" value=listFilter placeholder=(i18n "community_canned_replies.filter_hint")}}
        <a class="close pull-right" {{action "hide"}}>{{d-icon "times"}}</a>

        <hr/>
      {{/if}}

      {{#each filteredReplies as |r|}}
        {{community-canned-reply reply=r}}
      {{/each}}
    {{/conditional-loading-spinner}}
  </div>
{{/if}}
